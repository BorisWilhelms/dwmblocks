#!/bin/sh

sink="alsa_output.pci-0000_00_1f.3.analog-stereo"

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer --sink "$sink" -t ;;
	4) pamixer --sink "$sink" --allow-boost -i 1 ;;
	5) pamixer --sink "$sink" --allow-boost -d 1 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --sink "$sink" --get-mute) = true ] && echo "ðŸ”‡ " && exit

vol="$(pamixer --sink "$sink" --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon $vol%"
