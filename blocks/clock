#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00"|"12") icon="ğŸ•›" ;;
	"01"|"13") icon="ğŸ•" ;;
	"02"|"14") icon="ğŸ•‘" ;;
	"03"|"15") icon="ğŸ•’" ;;
	"04"|"16") icon="ğŸ•“" ;;
	"05"|"17") icon="ğŸ•”" ;;
	"06"|"18") icon="ğŸ••" ;;
	"07"|"19") icon="ğŸ•–" ;;
	"08"|"20") icon="ğŸ•—" ;;
	"09"|"21") icon="ğŸ•˜" ;;
	"10"|"22") icon="ğŸ•™" ;;
	"11"|"23") icon="ğŸ•š" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal)" ;;
esac

date "+%d.%m. $icon %H:%M"